@model IEnumerable<CountingKs.Data.Entities.Food>
@{
  ViewBag.Title = "Home Page";
}
@section featured {
  <section class="featured">
    <div class="content-wrapper">
    </div>
  </section>
}
<h3>Some sample results from the database:</h3>

@Html.RouteLink("foods api controller", new  {httproute = "", controller = "Foods" })

@Html.RouteLink("foods api controller with id", new { httproute = "", controller = "Foods", foodid = 1})

@Html.RouteLink("Get measures with_foodlink", new { httproute = "", controller = "Measures", foodid = 1 })

@Html.RouteLink("Get measures with_foodlink optional measure id", new { httproute = "", controller = "Measures", foodid = 1, id = 1 })

@foreach (var food in Model)
{
  <div>@food.Description</div>
  <ul>
    @foreach (var measure in food.Measures)
    {
      <li>@measure.Description: @measure.Calories calories</li>
    }
  </ul>
}